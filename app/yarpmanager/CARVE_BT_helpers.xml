<application>
    <name> CARVE BT Helpers </name>
    <description> Run modules required by CARVE BT </description>
    <version>1.0</version>

	<!-- fake module that moves a bit the robot: TO BE REMOVED  -->
	<module>
	   <name>move_joints_module</name>
	   <node> localhost </node>
        <dependencies>
            <port timeout="20"> /SIM_CER_ROBOT/head/stateExt:o </port>
            <port timeout="20"> /SIM_CER_ROBOT/right_arm/stateExt:o </port>
        </dependencies>  
	</module>

	<!-- Handling BT stuff -->
	<module>
	   <name>blackboard_module</name>
	   <node>localhost</node>
	</module>

	<module>
	   <name>compute_inv_pose_module</name>
	   <node>localhost</node>
	</module>

	<module>
	   <name>locate_bottle_module</name>
	   <node>localhost</node>
	</module>

	<module>
	   <name>always_running_module</name>
	   <node>localhost</node>
	</module>

	<module>
	   <name>set_inv_pose_invalid_module</name>
	   <node>localhost</node>
	</module>

 	<!-- connections -->

	<connection>
	  <from>/joystickCtrl:o</from>
	   <to>/baseControl/joystick1:i</to>
	   <protocol>tcp</protocol>
	</connection>


</application>

